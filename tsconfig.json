{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.vue.js",
    "**/*.vue.ts",
    "supabase/functions",
    "src/sw.ts"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "lib": ["ES2022", "DOM"],
    "target": "ES2022"
  }
}
